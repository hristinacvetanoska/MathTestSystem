@page "/teacher/upload"
@using MathTestSystem.UI.DTOs
@using MathTestSystem.UI.Services
@inject AuthStateService Auth
@inject HttpClient Http
@if (!Auth.IsAuthenticated || !Auth.Roles.Contains("Teacher"))
{
    <p>Access denied</p>
}
else
{
    <h3>Upload Exam XML</h3>

    <InputFile OnChange="HandleFileSelected" />

    @if (!string.IsNullOrEmpty(message))
    {
        <p>@message</p>
    }

    <h3>Students & Results</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Student Id</th>
                <th>Name</th>
                <th>Exam Results</th>
            </tr>
        </thead>
        <tbody>
            @if (students != null)
            {
                @foreach (var student in students)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.Name</td>
                        <td>
                            @if (student.Results != null && student.Results.Any())
                            {
                                <ul>
                                    @foreach (var result in student.Results)
                                    {
                                        <li>Exam @result.ExamId: Score = @result.Score%</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>No results yet</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
@code {
    private string message;
    private List<StudentWithResultsDTO> students;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            students = await Http.GetFromJsonAsync<List<StudentWithResultsDTO>>("api/teacher/students");
        }
        catch (Exception ex)
        {
            message = $"Failed to load students: {ex.Message}";
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            var xmlContent = await reader.ReadToEndAsync();

            var response = await Http.PostAsJsonAsync("api/teacher/upload-xml-document", new XMLContentDTO { XMLContent = xmlContent });

            if (response.IsSuccessStatusCode)
            {
                message = "File uploaded and processed successfully!";
                await LoadStudents();
            }
            else
            {
                message = $"Upload failed: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }
}
